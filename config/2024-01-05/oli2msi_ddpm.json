{
    "name": "oli2msi_ddpm",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "experiments/2024-01-05/oli2msi_ddpm/logs",
        "tb_logger": "experiments/2024-01-05/oli2msi_ddpm/tb_logger",
        "results": "experiments/2024-01-05/oli2msi_ddpm/results",
        "checkpoint": "experiments/2024-01-05/oli2msi_ddpm/checkpoint",
        "resume_state": null //"experiments/oli2msi_ddpm/checkpoint/last"
    },
    "datasets": {
	"output_size": 160,
        "train": {
            "name": "OLI2MSI",
	    "dataroot": "/data/piperw/data/OLI2MSI/",
            "datatype": "oli2msi", //img for naip reconstruction & LSUN, s2 for conditioning on just s2, s2_and_downsampled_naip for both
            "batch_size": 32,
            "num_workers": 16,
            "use_shuffle": true,
            "n_s2_images": 1  // if using S2 for condition, how many images per naip datapoint
        },
        "val": {
            "name": "OLI2MSI",
            "dataroot": "/data/piperw/data/OLI2MSI/",
            "datatype": "oli2msi", //img for naip reconstruction & LSUN, s2 for conditioning on just s2, s2_and_downsampled_naip for both
	    "use_shuffle": false,
            "n_s2_images": 1  // if using S2 for condition, how many images per naip datapoint
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
	    "image_size": 160,
            "channels": 3, //sample channel
            "conditional": true, // unconditional generation or unconditional generation(super_resolution)
            "is_ddim_sampling": false
	}
    },
    "train": {
        "n_iter": 10000000,
        "val_freq": 5e5,
        "save_checkpoint_freq": 5e3,
        "print_freq": 1000,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        }
    },
    "wandb": {
        "project": "multisat"
    }
}
